<%- model_class = Domain -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @show_domain.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @show_domain.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timezone) %>:</strong></dt>
  <dd><%= @show_domain.timezone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:system_flag) %>:</strong></dt>
  <dd><%= @show_domain.system_flag %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creator_id) %>:</strong></dt>
  <dd><%= @show_domain.creator_name if @show_domain.creator %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updater_id) %>:</strong></dt>
  <dd><%= @show_domain.updater_name if @show_domain.updater %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @show_domain.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @show_domain.updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              domains_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_domain_path(@show_domain), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              domain_path(@show_domain),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
